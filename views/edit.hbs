{{>header}}

<h1>Edit Post</h1>
<form action="/update/{{post._id}}" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="title" value="{{post.title}}" required>
    <label>Post</label>
    <textarea class="form-control" name="content" rows="5" cols="30" required>{{post.content}}</textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Update</button>
</form>

{{>footer}}
